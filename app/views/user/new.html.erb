

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">


    <%= form_tag url_for(action: 'create'), method: "post" do %>
    <div class="form-group">
      <%= label_tag 'Prénom' %>
      <i class="fa fa-user"></i><%= text_field_tag 'first_name', @user.first_name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= label_tag 'Nom' %>
        <i class="fa fa-user"></i><%= text_field_tag 'last_name', @user.last_name, class: 'form-control' %>
        </div>
      <div class="form-group">
        <%= label_tag 'Email'%>
        <i class="fa fa-envelope"></i><%= text_field_tag 'email', @user.email, class: 'form-control' %>
      </div>
            <div class="form-group">
        <%= label_tag 'Description'%>
        <i class="fa fa-user"></i><%= text_field_tag 'description', @user.description, class: 'form-control' %>
      </div>
      
     <!-- <div class="form-group">
        <%= label_tag 'Ville'%>
        <%= text_field_tag 'city_id', @user.city_id, class: 'form-control' %>
      </div> -->
      <div class="form-group">
        <%= label_tag 'Age'%>
        <i class="fa fa-user"></i><%= text_field_tag 'age', @user.age, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= label_tag 'Mot de passe*' %> <span style="font-size:12px;"> 6 à 20 caractères :)</span>
        <i class="fa fa-lock"></i><%= text_field_tag 'password', @user.password, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= submit_tag "Envoyer", class:"btn btn-info" %>
      </div>
    <% end %> 